<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fall2018.csc2017.GameCentre.Simon.SimonGameActivity">
    <LinearLayout
        android:layout_width="428dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:weightSum="3"
        android:background="@drawable/background">

        <Button
            android:id="@+id/undoButton"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redo Pattern"
            android:layout_marginRight="30dp"
            android:background="@color/FoxYellow"/>


        <Button
            android:id="@+id/saveButton"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/FoxYellow"
            android:text="Save Game" />


    </LinearLayout>

    <fall2018.csc2017.GameCentre.GestureDetectGridViews.GestureDetectGridViewShortPress xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3pt"
        tools:context="fall2018.csc2017.GameCentre.Simon.SimonGameActivity" />

</LinearLayout>
